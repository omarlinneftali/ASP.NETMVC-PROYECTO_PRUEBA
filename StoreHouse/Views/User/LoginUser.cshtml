@using System.Web.Mvc.Html
@model StoreHouse.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login Form";
    var action = "LoginUser";
    var controller = "User";
    //Layout = null;

}


<form class="w-25 mx-auto justify p-4 border mt-4 rounded" action="@Url.Action(action,controller)" method="post" id="loginForm">



    <div class="form-horizontal">
        <h4>Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>

    </div>

</form>


@section scripts
{
    <script src="~/Scripts/project/user/loginValidation.js"></script>

}

<script src="~/Scripts/jquery-1.12.4.min.js"></script>

<script src="~/Scripts/notify.js"></script>

<script src="~/Scripts/project/user/userScript.js"></script>


<script src="~/Scripts/project/user/loginValidation.js"></script>
